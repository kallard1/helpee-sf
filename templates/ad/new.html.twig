{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <h3>New ad</h3>
        {{ form_start(form) }}

        <div class="row">
            <div class="form-group col-12">
                {{ form_widget(form.title, {'attr': {'class': 'form-control-lg'}}) }}
                {{ form_label(form.title) }}
            </div>
        </div>
        {% if app.user.communities|length > 1 %}
            <div class="row">
                <div class="form-group col-12">

                    <select name="_community" id="community" class="form-control form-control-lg">
                        {% for community in app.user.communities %}
                            <option value="{{ community.id }}">{{ community.name }}</option>
                        {% endfor %}
                    </select>
                    <label for="community">Community</label>
                </div>
            </div>
        {% else %}
            {% for community in app.user.communities %}
                <input type="hidden" name="_community" value="{{ community.id }}"/>
            {% endfor %}
        {% endif %}

        <div class="row">
            <div class="form-group col-12">
                {{ form_widget(form.category, {'attr': {'class': 'form-control-lg'}}) }}
                {{ form_label(form.category) }}
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                {{ form_widget(form.description, {'attr': {'class': 'form-control-lg', 'style': 'height: 30vh'}}) }}
                {{ form_label(form.description) }}
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                {{ form_widget(form.uev, {'attr': {'class': 'form-control-lg'}}) }}
                {{ form_label(form.uev) }}
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                <button type="submit" class="btn btn-light-pink btn-lg col-12">Create</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
