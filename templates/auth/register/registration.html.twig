{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <h3>{{ 'registration.title'|trans }}</h3>
        {{ form_start(form) }}

        <div class="form-group col-12">
            {{ form_label(form.firstname, 'registration.label.firstname') }}
            {{ form_widget(form.firstname, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.firstname) }}
        </div>

        <div class="form-group col-12">
            {{ form_label(form.lastname, 'registration.label.lastname') }}
            {{ form_widget(form.lastname, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.lastname) }}
        </div>

        <div class="form-group col-12">
            {{ form_label(form.email, 'registration.label.email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group col-12">
            {{ form_label(form.plainPassword.first, 'registration.label.password') }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="form-group col-12">
            {{ form_label(form.plainPassword.second, 'registration.label.password_confirmation') }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        <div class="form-group col-12">
            {{ form_label(form.informationUser.address, 'registration.label.address') }}
            {{ form_widget(form.informationUser.address, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.informationUser.address) }}
        </div>

        <div class="form-group col-12">
            {{ form_label(form.informationUser.address1, 'registration.label.address_1') }}
            {{ form_widget(form.informationUser.address1, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.informationUser.address1) }}
        </div>

        <div class="form-group col-12">
            <select class="js-data-cities form-control form-control-lg" name="_city" id="city"></select>
            <label for="city" class="active">{{ 'registration.label.city'|trans }}</label>
        </div>

        <div class="form-group col-12">
            {{ form_label(form.informationUser.phone, null) }}
            {{ form_widget(form.informationUser.phone, {'attr': {'class': 'form-control-lg'}}) }}
            {{ form_errors(form.informationUser.phone) }}
        </div>

        <div class="form-group col-12">
            <button class="btn btn-light-pink col-12" name="_submit" type="submit">
                {{ 'registration.button.register'|trans }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('search/city') }}
{% endblock %}
