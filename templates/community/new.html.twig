{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <h3>Nouvelle communaut√©</h3>
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="row">
            <div class="form-group col-12">
                {{ form_widget(form.name, {'attr': {'class': 'form-control-xs'}}) }}
                {{ form_label(form.name, 'community.label.name') }}
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                {{ form_widget(form.description, {'attr': {'class': 'form-control-xs'}}) }}
                {{ form_label(form.description, 'community.label.description') }}
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                <select class="js-data-cities form-control form-control-xs" name="_city" id="city"></select>
                <label for="city" class="active">{{ 'community.label.city'|trans }}</label>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                <button type="submit"
                        class="btn btn-orange text-white btn-xs col-12">{{ 'community.button.create'|trans }}</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('search/city') }}
{% endblock %}
