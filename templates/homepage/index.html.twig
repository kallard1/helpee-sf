{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/homepage.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="btn-container">
            <a href="#" class="btn btn-fit btn-propose">{{ 'button.propose'|trans }}</a>
            <a href="#" class="btn btn-fit btn-search active">{{ 'button.look-for'|trans }}</a>
        </div>

        <form action="">
            <div class="form-group col-12">
                <select name="category" id="categories" class="form-control form-control-lg">
                    <option selected disabled>{{ 'select.category'|trans }}</option>
                    {% if categories %}
                        {% for category in categories %}
                            {% if category.level == 0 and category.slug != "autres" %}
                                <option disabled>[{{ category.label }}]</option>
                            {% else %}
                                <option value="{{ category.slug }}">{{ category.label }}</option>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </select>
                <label for="categories" class="active">Categories</label>
            </div>

            <div class="form-group col-12">
                <input type="text" id="keywords" name="keywords" class="form-control form-control-lg">
                <label for="keywords">{{ "keywords"|trans }}</label>
            </div>

            <div class="form-group col-12">
                <select class="js-data-cities form-control" id="city"></select>
                <label for="city" class="active"></label>
            </div>

            <div class="form-group btn-container col-12">
                <button type="submit" class="btn btn-fit btn-search active">{{ "search"|trans }}</button>
            </div>
        </form>
    </div>

    <div class="container">
        <h3>{{ "website_in_some_figures"|trans({'%site_name%': site_name}) }}</h3>

        <div class="count-container">
            <div class="count-container-group">
                <i class="count-icon icon-communities"></i>
                <p class="common-count purple-text">{{ count_communities }}</p>
                <p class="common-count text purple-text">{{ 'num_of_communities'|trans({'count': count_communities}) }}</p>
            </div>
            <div class="count-container-group">
                <i class="count-icon icon-money"></i>
                <p class="common-count yellow-text">{{ count_uev }}</p>
                <p class="common-count text yellow-text">{{ 'num_of_traded_uev'|trans({'count': count_uev}) }}</p>
            </div>
            <div class="count-container-group">
                <i class="count-icon icon-users"></i>
                <p class="common-count amaranth-text">{{ count_users }}</p>
                <p class="common-count text amaranth-text">{{ 'num_of_users'|trans({'count': count_users}) }}</p>
            </div>
        </div>
    </div>

    <div class="container">
        <h3>{{ 'how_it_works'|trans }}</h3>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('build/images/slide1.png')}}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('build/images/slide2.png')}}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('build/images/slide3.png')}}" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('search/city') }}
    {{ encore_entry_script_tags('homepage') }}
{% endblock %}
