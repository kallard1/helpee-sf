{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2 class="title">Edit description</h2>
    {{ form_start(form) }}
    <div class="form-group col-12">
        {{ form_widget(form.description) }}
        {{ form_label(form.description, 'profile.label.description') }}
    </div>

    <div class="form-group col-12">
        <button type="submit" class="btn btn-light-pink col-12">{{ 'profile.description.button.submit'|trans }}</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}

